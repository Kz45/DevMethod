{
  "mcp_bridge": {
    "enabled": true,
    "config_source": "auto-detect",
    "bridge_mode": "stdio_proxy",
    "path_translation": {
      "windows_to_wsl": {
        "C:\\Users\\USERNAME\\": "/mnt/c/Users/USERNAME/",
        "/Users/USERNAME/": "/mnt/c/Users/USERNAME/"
      }
    }
  },
  "available_mcps": {
    "filesystem": {
      "description": "File system operations with path translation",
      "status": "active",
      "wsl_paths": ["/mnt/c/Users/USERNAME/Desktop", "/mnt/c/Users/USERNAME/Downloads"]
    },
    "github": {
      "description": "GitHub API integration",
      "status": "active",
      "requires_token": true
    },
    "n8n-mcp": {
      "description": "N8N workflow automation",
      "status": "active",
      "api_url": "https://your-n8n-instance.com"
    },
    "playwright": {
      "description": "Web automation and testing",
      "status": "active"
    },
    "sequential-thinking": {
      "description": "Enhanced reasoning capabilities",
      "status": "active"
    },
    "blender": {
      "description": "Blender 3D automation",
      "status": "experimental"
    },
    "context7": {
      "description": "Documentation context provider",
      "status": "active",
      "remote_url": "https://gitmcp.io/upstash/context7"
    }
  },
  "logging": {
    "level": "info",
    "file": "/tmp/claude-code-mcp-bridge.log"
  },
  "performance": {
    "timeout_ms": 30000,
    "retry_attempts": 3,
    "heartbeat_interval": 30000
  }
}